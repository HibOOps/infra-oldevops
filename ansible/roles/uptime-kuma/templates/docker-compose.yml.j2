version: '3.3'

services:
  uptime-kuma:
    image: louislam/uptime-kuma:1
    container_name: uptime-kuma
    environment:
      - UPTIME_KUMA_TRUST_PROXY=1
    volumes:
      - ./data:/app/data
    ports:
      - 3001:3001
    restart: always
    networks:
      - proxy
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.uptimekuma.rule=Host(`status.oldevops.fr`)"
      - "traefik.http.routers.uptimekuma.entrypoints=websecure"
      - "traefik.http.routers.uptimekuma.tls.certresolver=ovh"
      - "traefik.http.routers.uptimekuma.middlewares=uptime-kuma-headers,rate-limit"
      - "traefik.http.services.uptimekuma.loadbalancer.server.port=3001"
      - "traefik.http.services.uptimekuma.loadbalancer.server.scheme=http"
      - "traefik.http.services.uptimekuma.loadbalancer.passhostheader=true"

networks:
  proxy:
    external: true
