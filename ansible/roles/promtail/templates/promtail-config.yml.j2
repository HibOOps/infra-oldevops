server:
  http_listen_port: 9080

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://192.168.1.202:3100/loki/api/v1/push

scrape_configs:
  - job_name: docker
    static_configs:
      - labels:
          host: {{ inventory_hostname }}
          job: docker
          __path__: /var/lib/docker/containers/*/*.log
    pipeline_stages:
      - json:
          expressions:
            log: log
            stream: stream
            time: time
      - json:
          source: log
          expressions:
            level: level
            service: service
      - labels:
          stream:
          level:
          service:

  - job_name: syslog
    static_configs:
      - labels:
          host: {{ inventory_hostname }}
          job: syslog
          __path__: /var/log/syslog
    pipeline_stages:
      - regex:
          expression: '.*\s+(?P<level>(emerg|alert|crit|err|warning|notice|info|debug))(\[|\s).*'
      - labels:
          level:

  - job_name: journal
    journal:
      labels:
        host: {{ inventory_hostname }}
        job: journal
