version: "3.8"

services:
  postgres:
    image: postgres:16-alpine
    container_name: app-demo-db
    restart: unless-stopped
    env_file: .env
    volumes:
      - ./data/postgres:/var/lib/postgresql/data
    networks:
      - app-internal
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ app_demo_db_user }}"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    image: node:20-alpine
    container_name: app-demo-backend
    restart: unless-stopped
    env_file: .env
    working_dir: /app
    command: ["node", "server.js"]
    ports:
      - "{{ app_demo_backend_port }}:{{ app_demo_backend_port }}"
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - app-internal
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:{{ app_demo_backend_port }}/api/health"]
      interval: 15s
      timeout: 5s
      retries: 3

  frontend:
    image: node:20-alpine
    container_name: app-demo-frontend
    restart: unless-stopped
    env_file: .env
    working_dir: /app
    command: ["node", "server.js"]
    ports:
      - "{{ app_demo_frontend_port }}:{{ app_demo_frontend_port }}"
    depends_on:
      - backend
    networks:
      - app-internal
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:{{ app_demo_frontend_port }}/"]
      interval: 15s
      timeout: 5s
      retries: 3

networks:
  app-internal:
    driver: bridge
